{
  "name": "velcro",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "lerna run build --ignore @velcro/playground",
    "build:api": "lerna run build:api",
    "build:dev": "lerna run --parallel build:dev",
    "build:docs": "npx api-documenter markdown -i ./api/** -o docs",
    "clean": "rm -rf ./packages/@velcro/*/dist",
    "predeploy": "cd packages/playground && SKIP_PREFLIGHT_CHECK=true npm run build",
    "deploy": "gh-pages -d packages/playground/build",
    "preversion": "npm run clean && npm test",
    "version": "npm run build:docs && git add .",
    "start": "cd packages/playground && SKIP_PREFLIGHT_CHECK=true npm run start",
    "test": "cross-env NODE_OPTIONS=--max_old_space_size=4096 POLLY_MODE=replay jest --verbose"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:ggoodman/velcro.git"
  },
  "keywords": [],
  "author": "Geoff Goodman <geoff@goodman.dev> (https://geoff.goodman.dev)",
  "license": "MIT",
  "devDependencies": {
    "@hapi/wreck": "^17.0.0",
    "@microsoft/api-documenter": "^7.9.1",
    "@microsoft/api-extractor": "^7.10.1",
    "@rollup/plugin-alias": "^3.1.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@spotify/polly-jest-presets": "^3.1.1",
    "@tsconfig/node10": "^1.0.3",
    "@types/jest": "^26.0.14",
    "@wessberg/rollup-plugin-ts": "^1.3.5",
    "cross-env": "^7.0.2",
    "cross-fetch": "^3.0.6",
    "gh-pages": "^3.1.0",
    "globalthis": "^1.0.1",
    "jest": "^26.6.1",
    "lerna": "^3.22.1",
    "locate-character": "^2.0.5",
    "prettier": "^2.1.2",
    "rollup": "^2.28.2",
    "rollup-plugin-inject-process-env": "^1.3.0",
    "rollup-plugin-terser": "^7.0.2",
    "source-map": "^0.7.3",
    "ts-jest": "^26.4.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.3"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "homepage": "https://ggoodman.github.io/velcro"
}
