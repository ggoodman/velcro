  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "[runtime] Run tests",
      "cwd": "${workspaceRoot}/packages/runtime",
      "program": "${workspaceRoot}/packages/runtime/node_modules/.bin/lab",
      "args": ["-fSv", "--transform", "./test/lib/typescript.js"],
      "outputCapture": "std",
      "skipFiles": ["<node_internals>/!(https:)/*.js"],
      "sourceMaps": true
    }
  ]
}
