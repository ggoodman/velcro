{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": false,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "include": ["src", "test"],
  "exclude": ["node_modules/@types/node"],
  "references": [
    {
      "path": "../../packages/resolver"
    },
    {
      "path": "../../packages/node-libs"
    }
  ]
}
