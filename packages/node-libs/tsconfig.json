{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "esModuleInterop": true,
    "target": "es2018",
    "module": "commonjs",
    "noEmit": true,
    "rootDir": "./src",
    "declaration": true,
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["lib"],
  "exclude": ["node_modules/@types/node"]
}
