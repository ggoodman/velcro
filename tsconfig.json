{
  "extends": "@tsconfig/node10/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "__out__",
    "paths": {
      "@velcro/*": ["./packages/@velcro/*/src"],
      "nostalgie": ["./packages/nostalgie/src"]
    },
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true
  },
  // "files": ["__test__"],
  "include": ["__test__"],
  "references": [
    { "path": "./packages/@velcro/bundler" },
    { "path": "./packages/@velcro/common" },
    { "path": "./packages/@velcro/node-libs" },
    { "path": "./packages/@velcro/plugin-css" },
    { "path": "./packages/@velcro/plugin-sucrase" },
    { "path": "./packages/@velcro/resolver" },
    { "path": "./packages/@velcro/runner" },
    { "path": "./packages/@velcro/strategy-cdn" },
    { "path": "./packages/@velcro/strategy-compound" },
    { "path": "./packages/@velcro/strategy-fs" },
    { "path": "./packages/@velcro/strategy-memory" },
    { "path": "./packages/nostalgie" }
  ]
}
